<p id="notice"><%= notice %></p>

<h1>Listing Friendships</h1>

<div><%# @friends.each  do |friend|%>
  <ul>
    <li><%#= friend.inspect %></li>
    <% #end %>
  </ul>
</div>
<table>
  <thead>
    <tr>
      <th>Sender uid</th>
      <th>Reciever uid</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.sender.name %></td>
        <td><%= friendship.reciever.name %></td>
        <td><%= friendship.accepted %></td>
        <td><%= link_to 'Show', friendship %></td>
        <td><%= link_to 'Edit', edit_friendship_path(friendship) %></td>
        <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path %>
