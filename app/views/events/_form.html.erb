

<div class = "container">
  <form  >

    <div class="form-group">
     <div class = "title"> New Event  </div>

     <div class= "header"> Description </div>
     <div>

      <input type="text" class="form-control text-center" id="location" placeholder="ex. My place, Local bar, Downtown, Movie Night">
    </div>

    <div class = "header"> Starting </div>


    <div class = "starting-selector">
      <div id = "selector-one">
        <div class = "header">Now</div>
        <div class ="radio-selector-placement">
          <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="<%= Time.now %>">
          <input type="hidden" name="country" value="Norway">
        </div>
      </div>

      <div id="break-one"></div>

      <div id= "selector-two">
        <div class="header">Tonight</div>
        <div class ="radio-selector-placement">
          <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
          <input type="hidden" name="country" value="Norway">
        </div>
      </div>

      <div id="break-two"></div>

      <div id="selector-three">
        <div class="header">Tomorrow</div>
        <div class ="radio-selector-placement">
         <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
         <input type="hidden" name="country" value="Norway">
       </div>
     </div>

   </div>

   <div id="create-button-placement">
    <button type="submit" class="btn btn-default">Create</button>
  </div>
</form>

</div>
